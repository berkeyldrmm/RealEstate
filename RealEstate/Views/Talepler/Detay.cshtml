@model Talep

<style>
    .container{
        font-size:1.25em;
        color: #000000;
        width: 35%;
    }

    .col-6{
        display:flex;
        align-items:center;
        justify-content:end;
    }

    .row > .col-6:first-child{
        justify-content: end;
    }

    .row > .col-6:last-child {
        border-left:1px solid gray;
        justify-content:start;
    }

    .row {
        padding: 3px;
        border-bottom: 1px solid gray;
    }

    .pt-4{
        padding:0;
        margin:0;
        box-sizing:border-box;
    }

    footer .row{
        padding:0;
        border:none;
    }
</style>

@*<h1 class="text-center mt-4">@Model.IlanBaslik</h1>*@
<div class="d-flex justify-content-between pt-4">
    <div class="container d-grid">
        <div class="row">
            <div class="col-6"><span>Satıcı isim soyisim </span></div>
            <div class="col-6"><span>@Model.Alici.AdSoyad</span></div>
        </div>
        <div class="row">
            <div class="col-6"><span>Satıcı mail adresi </span> </div>
            <div class="col-6"><span>@Model.Alici.MailAdresi</span></div>
        </div>
        <div class="row">
            <div class="col-6"><span>İlan tipi </span> </div>
            <div class="col-6"><span>@Model.IlanTalepTipi.TipAdi</span></div>
        </div>
        
        <div class="row">
            <div class="col-6"><span>Satılık/Kiralık </span> </div>
            <div class="col-6"><span>@Model.SatilikMiKiralikMi</span></div>
        </div>
        @if (ViewBag.SemtlerVeOdalar.semtler.Count != 0)
        {
            <div class="row">
                <div class="col-6"><span>Semtler </span></div>
                <div class="col-6">@{
                        var semtler = "";
                        foreach (var semt in ViewBag.SemtlerVeOdalar.semtler)
                        {
                            semtler += semt + ", ";
                        }

                        var semtlerListe = semtler.Remove(semtler.Length - 2);
                        <span>@semtlerListe</span>
                    }</div>
            </div>
        }
        <div class="row">
            <div class="col-6"><span>Fiyat Aralığı</span> </div>
            <div class="col-6"><span>@Model.MinFiyat - @Model.MaxFiyat</span></div>
        </div>
        @if (ViewBag.SemtlerVeOdalar.odalar.Count != 0)
        {
            <div class="row">
                <div class="col-6"><span>Oda Sayısı </span></div>
                <div class="col-6">
                    @{
                        var odalar = "";
                        foreach (var oda in ViewBag.SemtlerVeOdalar.odalar)
                        {
                            odalar += oda + ", ";
                        }

                        var odalarListe = odalar.Remove(odalar.Length - 2);
                        <span>@odalarListe</span>
                    }
                </div>
            </div>
        }

        <div class="row" style="border:none">
            <div class="col-6"><span>Talep kayıt tarihi</span></div>
            <div class="col-6"><span>@Model.KayitTarihi</span></div>
        </div>
    </div>

</div>
<div class="container w-100 mt-5">
    Detaylar : @Model.Detaylar
</div>