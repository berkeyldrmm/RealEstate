@model Talep

<style>
    .container{
        font-size:1.25em;
        color: #000000;
        width: 35%;
    }

    .col-6{
        display:flex;
        align-items:center;
        justify-content:end;
    }

    .row > .col-6:first-child{
        justify-content: end;
    }

    .row > .col-6:last-child {
        border-left:1px solid gray;
        justify-content:start;
    }

    .row {
        padding: 3px;
        border-bottom: 1px solid gray;
    }

    .pt-4{
        padding:0;
        margin:0;
        box-sizing:border-box;
    }

    footer .row{
        padding:0;
        border:none;
    }
</style>

@*<h1 class="text-center mt-4">@Model.IlanBaslik</h1>*@
<div class="d-flex justify-content-between pt-4">
    <div class="container d-grid">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">Satıcı isim soyisim </th>
                    <td>@Model.Alici.AdSoyad</td>
                </tr>
                <tr>
                    <th scope="row">Satıcı mail adresi  </th>
                    <td>@Model.Alici.MailAdresi</td>
                </tr>
                <tr>
                    <th scope="row">İlan tipi  </th>
                    <td>@Model.IlanTalepTipi.TipAdi</td>
                </tr>

                <tr>
                    <th scope="row">Satılık/Kiralık  </th>
                    <td>@Model.SatilikMiKiralikMi</td>
                </tr>
                @if (ViewBag.SemtlerVeOdalar.semtler.Count != 0)
                {
                    <tr>
                        <th scope="row">Semtler </th>
                        <td>
                            @{
                                var semtler = "";
                                foreach (var semt in ViewBag.SemtlerVeOdalar.semtler)
                                {
                                    semtler += semt + ", ";
                                }

                                var semtlerListe = semtler.Remove(semtler.Length - 2);
                                @semtlerListe
                            }
                        </td>
                    </tr>
                }
                <tr>
                    <th scope="row">Fiyat Aralığı </th>
                    <td>@Model.MinFiyat - @Model.MaxFiyat</td>
                </tr>
                @if (ViewBag.SemtlerVeOdalar.odalar.Count != 0)
                {
                    <tr>
                        <th scope="row">Oda Sayısı </th>
                        <td>
                            @{
                                var odalar = "";
                                foreach (var oda in ViewBag.SemtlerVeOdalar.odalar)
                                {
                                    odalar += oda + ", ";
                                }

                                var odalarListe = odalar.Remove(odalar.Length - 2);
                                @odalarListe
                            }
                        </td>
                    </tr>
                }

                <tr style="border:none">
                    <th scope="row">Talep kayıt tarihi</th>
                    <td>@Model.KayitTarihi</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="container w-100 mt-5">
    Detaylar : @Model.Detaylar
</div>
<div class="mt-4">
    <div class="container-fluid pt-4 px-4">
    <h3>Bu talep için uygun olan ilanlar</h3>

     @await Component.InvokeAsync("GetIlansOfTalepComponent", new { userId = ViewBag.UserId, talepId = Model.Id })
    </div>
</div>