@model IEnumerable<Satici>

<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Satıcılar</h6>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"><input class="form-check-input" type="checkbox"></th>
                        <th scope="col">İsim soyisim</th>
                        <th scope="col">Telefon</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var satici in Model)
                    {
                        <tr>
                            <td><input class="form-check-input" type="checkbox"></td>
                            <td>@satici.AdSoyad</td>
                            <td>@satici.TelefonNo</td>
                            <td>@satici.MailAdresi</td>
                            <td><a class="btn btn-sm btn-primary" href="/detay/@satici.Id">Detail</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Recent Sales End -->

<script>
    $("#navSatici").addClass("active");
</script>