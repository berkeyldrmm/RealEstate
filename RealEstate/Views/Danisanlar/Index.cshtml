@model IEnumerable<Danisan>

<link rel="stylesheet" href="~/css/table.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>





<div class="container-fluid pt-4 px-4">
        <div class="bg-secondary rounded p-4">

            <div class="container d-flex justify-content-center">
                <div class="grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h4 class="mb-0 card-title">Danışanlar</h4>
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>İsim Soyisim</th>
                                            <th>Telefon No.</th>
                                            <th>Mail Adresi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var satici in Model)
                                        {
                                            <tr>
                                                <td><input name="danisanlar" class="form-check-input" type="checkbox" value=@satici.Id></td>
                                                <td>@satici.AdSoyad</td>
                                                <td>@satici.TelefonNo</td>
                                                <td>@satici.MailAdresi</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <button type="button" class="btn btn-lg btn-danger" onclick="danisanSilModal()">
                    Danışan Sil
                </button>
            </div>
        </div>

    @if (TempData["error"] != null)
    {
        <div id="errorDiv" class="bg-danger">
            @TempData["error"]
        </div>

        <script>
            setTimeout(() => {
                $("#errorDiv").fadeOut();
            }, 5000);
        </script>
    }
</div>

<div class="modal" tabindex="-1" role="dialog" id="danisanSilModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p style="color:#ffffff">Seçtiğiniz danışanlar silinsin mi?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="danisanSil()">Sil</button>
                <button type="button" class="btn btn-outline-secondary" onclick="closeModal()">Vazgeç</button>
            </div>
        </div>
    </div>
</div>
<!-- Recent Sales End -->

<script>
    $("#navSatici").addClass("active");

    function danisanSilModal() {
        $("#danisanSilModal").css("display", "flex");
        $("#danisanSilModal").css("align-items", "center");
        $("#danisanSilModal").css("justify-content", "center");

    }

    function danisanSil(){
        var danisanIds=[];
        var danisanlar = $("input[name='danisanlar']");
        danisanlar.each((index,value)=>{
            if (value.checked) {
                danisanIds.push(value.value);
            }
        });
        console.log(danisanIds);
        $.post("https://localhost:7191/danisanlar/danisanSil", { idsJson:JSON.stringify(danisanIds)}, (data,status) => {
            if(status="success"){
                location.reload()
            }
        });
    }
</script>