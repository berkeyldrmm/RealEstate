@model IEnumerable<Danisan>

<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Danışanlar</h6>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"></th>
                        <th scope="col">İsim soyisim</th>
                        <th scope="col">Telefon</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var satici in Model)
                    {
                        <tr>
                            <td><input name="danisanlar" class="form-check-input" type="checkbox" value=@satici.Id></td>
                            <td>@satici.AdSoyad</td>
                            <td>@satici.TelefonNo</td>
                            <td>@satici.MailAdresi</td>
                            <td><a class="btn btn-sm btn-primary" href="/detay/@satici.Id">Detail</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-end mt-3">
        <button type="button" class="btn btn-lg btn-danger" onclick="danisanSilModal()">
            Danışan Sil
        </button>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="danisanSilModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p style="color:#ffffff">Seçtiğiniz danışanlar silinsin mi?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="danisanSil()">Sil</button>
                <button type="button" class="btn btn-outline-secondary" onclick="closeModal()">Vazgeç</button>
            </div>
        </div>
    </div>
</div>
<!-- Recent Sales End -->

<script>
    $("#navSatici").addClass("active");

    function danisanSilModal() {
        $("#danisanSilModal").css("display", "flex");
        $("#danisanSilModal").css("align-items", "center");
        $("#danisanSilModal").css("justify-content", "center");

    }

    function danisanSil(){
        var danisanIds=[];
        var danisanlar = $("input[name='danisanlar']");
        danisanlar.each((index,value)=>{
            if (value.checked) {
                danisanIds.push(value.value);
            }
        });
        console.log(danisanIds);
        $.post("https://localhost:7191/danisanlar/danisanSil", { idsJson:JSON.stringify(danisanIds)}, (data,status) => {
            if(status="success"){
                location.reload()
            }
        });
    }
</script>