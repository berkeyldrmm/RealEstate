    <script>
        function signOutModal() {
            $(".modal").css("display", "flex");
            $(".modal").css("align-items", "center");
            $(".modal").css("justify-content", "center");

            localStorage.removeItem("realEstateNameSurname");
        }

        function closeModal(){
            $(".modal").css("display", "none");
        }

        if (localStorage.getItem("realEstateNameSurname") == null) {
            $.get("https://localhost:7191/login/getNameSurname", (nameSurname)=>{
                localStorage.setItem("realEstateNameSurname", nameSurname);
                $("#nameSurname").html(nameSurname);
            });
        }

        $("#nameSurname").html(localStorage.getItem("realEstateNameSurname"));
    </script>
